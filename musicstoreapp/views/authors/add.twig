{% extends "layout.twig" %}
{% block title %} Añadir autor {% endblock %}
{% block main_container %}
<h2>Añadir autor</h2>
<form class="form-horizontal" method="post" action="/authors/add">
    <div class="form-group">
        <label class="control-label col-sm-2" for="name">Nombre:</label>
        <div class="col-sm-10">
            <input type="text" id="name" class="form-control" name="name"
                   placeholder="Freddy Mercury" required/>
        </div>
    </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="group">Grupo:</label>
        <div class="col-sm-10">
            <input type="text" id="group" class="form-control" name="group"
                   placeholder="Queen" required/>
        </div>
    </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="role">Rol:</label>
        <div class="col-sm-10">
            <select class="form-control" id="role" name="role" required>
                <option value="singer">Cantante</option>
                <option value="drummer">Batería</option>
                <option value="guitarrist">Guitarrista</option>
                <option value="pianist">Teclista</option>
                <option value="bassist">Bajista</option>

            </select>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
    </div>
</form>
{% endblock %}